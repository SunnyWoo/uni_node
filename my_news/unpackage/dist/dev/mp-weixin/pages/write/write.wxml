<view class="content"><view class="selected"><scroll-view class="scroll-X" scroll-x="true" scroll-into-view="{{view}}"><block wx:for="{{iptList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="scroll-view-item"><block wx:if="{{item.type=='image'}}"><image src="{{item.content}}" id="{{'item_'+index}}" mode="aspectFit" data-event-opts="{{[['tap',[['delItem',[index]]]]]}}" bindtap="__e"></image></block><block wx:else><text id="{{'item_'+index}}" data-event-opts="{{[['tap',[['delItem',[index]]]]]}}" bindtap="__e">{{item.content}}</text></block></view></block></scroll-view></view><view class="plus"><view data-event-opts="{{[['tap',[['imgSel',['$event']]]]]}}" class="image-sel" bindtap="__e"><image src="/static/plus.png" mode></image></view><form data-event-opts="{{[['submit',[['formSubmit',['$event']]]],['reset',[['formReset',['$event']]]]]}}" bindsubmit="__e" bindreset="__e"><view class="form"><textarea class="txt-area" value="{{txtCon}}" placeholder="请输入内容" data-event-opts="{{[['input',[['__set_model',['','txtCon','$event',[]]]]]]}}" bindinput="__e"></textarea><view class="btn-area"><button type="primary" disabled="{{txtCon==''}}" formType="submit">加一行</button><button type="default" formType="reset">清空</button></view></view></form></view><input class="ipt-title" type="text" placeholder="请输入标题" data-event-opts="{{[['input',[['__set_model',['','title','$event',[]]]]]]}}" value="{{title}}" bindinput="__e"/><picker mode="selector" value="{{selCateIndex}}" range="{{cateList}}" range-key="name" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view class="cate-badge"><view class="badge-item"><view class="badge-title">{{cateList[selCateIndex].name}}</view><image class="img-right" src="/static/right.png"></image></view></view></picker><button type="primary" disabled="{{title==''||selCateIndex=='0'||iptList.length==0}}" data-event-opts="{{[['tap',[['save',['$event']]]]]}}" bindtap="__e">保存</button></view>